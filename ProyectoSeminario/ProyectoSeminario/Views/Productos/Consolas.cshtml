@{
    ViewData["Title"] = "CONSOLAS";
}

<h1 style="font-family : cursive" class="animated flip">@ViewData["Title"]</h1>


<div class="row">

    <div class="col-md-3 col-sm-3 animated fadeInDown retraso-1 " style="font-family:cursive;margin-top:100px;margin-right:30px">
        <img src="~/images/consolas/xbox.jpg" class="animated fadeIn" height="200" width="300" />
        <h2 style="color:#000000" class="allerta">XBOX <button type="button" class="btn btn-primary producto" precio="500000" titulo="XBOX">Comprar</button></h2>
        <strong style=" color:#212121">$500.000</strong>
    </div>
    <div class="col-md-3  col-sm-3 animated fadeInDown retraso-1" style="font-family:cursive;margin-top:100px;margin-right:30px">
        <img src="~/images/consolas/xbox360.jpg" class="animated fadeIn " height="200" width="300" />
        <h2 style="color:#000000" class="allerta"> XBOX 360<button type="button" class="btn btn-primary producto" precio="1800000" titulo="XBOX 360">Comprar</button></h2>
        <strong style=" color:#212121">$1'800.000</strong>
    </div>
    <div class="col-md-3 col-sm-3 animated fadeInDown retraso-1 " style="font-family:cursive;margin-top:100px;margin-right:30px">
        <img src="~/images/consolas/play32.jpg" class=" animated fadeIn " height="200" width="300" />
        <h2 style="color: #000000">PS3<button type="button" class="btn btn-primary producto" precio="700000" titulo="PS3">Comprar</button></h2>
        <strong style=" color:#212121">$700.000</strong>
    </div>

</div>
<div class="row">

    <div class="col-md-3 col-sm-3 animated fadeInDown retraso-2 " style="font-family:cursive;margin-top:100px;margin-right:30px">
        <img src="~/images/consolas/xboxone.jpg" class="animated fadeIn" height="200" width="300" />
        <h2 style="color:#000000" class="allerta">XBOX ONE<button type="button" class="btn btn-primary producto" precio="3000000" titulo="Xbox one">Comprar</button></h2>
        <strong style=" color:#212121">$3'000.000</strong>
    </div>
    <div class="col-md-3 col-sm-3 animated fadeInDown retraso-2 " style="font-family:cursive;margin-top:100px;margin-right:30px">
        <img src="~/images/consolas/PS2.jpg" class="animated fadeIn " height="200" width="300" />
        <h2 style="color:#000000" class="allerta">PS2<button type="button" class="btn btn-primary producto" precio="2800000" titulo="PS2">Comprar</button></h2>
        <strong style=" color:#212121">$2'800.000</strong>
    </div>
    <div class="col-md-3  col-sm-3 animated fadeInDown retraso-2" style="font-family:cursive;margin-top:100px;margin-right:30px">
        <img src="~/images/consolas/WII.jpg" class=" animated fadeIn " height="200" width="300" />
        <h2 style="color: #000000">WII<a href="#" class="btn btn-primary producto" precio="760000" titulo="WII" role="button">Comprar</a></h2>
        <strong style=" color:#212121">$760.000</strong>
    </div>

</div>
<script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
<script src="~/js/bootstrap.min.js"></script>
<script src="~/js/minicart.min.js"></script>
<script src="minicart.js"></script>
<script>
    // configuración inicial del carrito
    paypal.minicart.render(
        {
            strings: {
                button: 'Pagar'
                , buttonAlt: "Total"
                , subtotal: 'Total:'
                , empty: 'No hay productos en el carrito'
            }
        }

    );
    // Eventos para agregar productos al carrito
    $('#viewcart').click(function (e) {
        e.stopPropagation();
        paypal.minicart.view.show();
    });
    $('.producto').click(function (e) {
        e.stopPropagation();
        paypal.minicart.cart.add({
            business: 'jjmurillob@ut.edu.co', // Cuenta paypal para recibir el dinero
            item_name: $(this).attr("titulo"),
            amount: $(this).attr("precio"),
            currency_code: 'USD',

        });
    });
</script>




